    "grunt": "1.0.3",
    "grunt-banana-checker": "0.6.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-jsonlint": "1.1.0",
    "grunt-notify": "0.4.5",
    "grunt-stylelint": "0.10.1",
    "hogan.js": "2.0.0",
    "jquery": "3.3.1",
    "jsdoc": "3.5.5",
    "jsdom": "12.2.0",
    "nyc": "13.0.1",
    "oojs": "2.2.2",
    "pre-commit": "1.2.2",
    "qunit": "2.7.0",
    "sinon": "1.17.3",
    "stylelint-config-wikimedia": "0.5.0",
    "svgo": "1.1.1",
