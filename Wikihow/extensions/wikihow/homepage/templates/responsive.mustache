			<a href="{{{amazon_ignite_url}}}" target="_blank" class="hp_button" id="hp_amazon_ignite_btn">{{{amazon_ignite_btn}}}</a>
		</div>
	</div>
	{{/has_education}}

	{{#has_coverletter}}
	<div id="hp_coverletter">
		<img src="/extensions/wikihow/homepage/images/CoverLetterPromo_small2x_opti.png" loading="lazy" />
		<h3>{{{coverletter_header_desc}}}</h3>
			<p>{{{coverletter_desc}}}</p>
		<a href="{{{coverletterteachable_url}}}" target="_blank" class="hp_button">{{{coverletter_btn}}}</a>
	</div>
	{{/has_coverletter}}
</div>

