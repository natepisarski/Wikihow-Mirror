<div class="hp_narrow">
	{{{special_message}}}

	<div id="hp_categories">
		<h3><img src="/extensions/wikihow/homepage/images/categories2.svg" loading="lazy" />{{hp_cat_header}}</h3>
		<ul id="hp_categories_list">
			{{#categories}}
				<li class="cat_icon">
					<a href="{{link}}"><img src="{{icon}}" loading="lazy" />{{name}}</a>
				</li>
			{{/categories}}
		</ul>
	</div>

	<div id="hp_featured">
		<h3><img src="/extensions/wikihow/homepage/images/featured2.svg" loading="lazy" />{{hp_featured_header}}</h3>
		<div id="hp_featured_container">
			{{#featured_items}}
				{{> responsive_thumb.mustache}}
			{{/featured_items}}
		</div>
		{{#showmore}}
		<a href="/Category:Featured-Articles" class="hp_button">{{showmoretext}}</a>
		{{/showmore}}

		{{#has_coverletter}}
		<div id="hp_coverLetterLarge">
			<img src="/extensions/wikihow/homepage/images/CoverLetterCourse_Large_Cropped.jpg" loading="lazy" />
			<h3>{{{coverletter_header_desc}}}</h3>
				<p>{{{coverletter_desc}}}</p>
			<a href="{{{coverletterteachable_url}}}" target="_blank" class="hp_button" id="hp_cover_letter_btn">{{{coverletter_btn}}}</a>
		</div>
		{{/has_coverletter}}
	</div>

	<div id="hp_languages">
		<h3><img src="/extensions/wikihow/homepage/images/international2.svg" loading="lazy" />{{hp_lang_header}}</h3>
		<div id="hp_lang_list">
			{{#languages}}
				{{{.}}}
			{{/languages}}
		</div>
	</div>
	{{#has_newsletter}}
	<div id="hp_newsletter">
		<h3><img src="/extensions/wikihow/homepage/images/newsletter2.svg" loading="lazy" />{{hp_newsletter_header}}</h3>
		<div id="hp_newsletter_container">
			<img src="/extensions/wikihow/homepage/images/newsletter.png" loading="lazy" />
			<h4>{{hp_newsletter_subscribe}}</h4>
			<p>{{hp_newsletter_text}}</p>
			<a href="{{{newsletter_url}}}" target="_blank" class="hp_button">Sign me up!</a>
		</div>
	</div>
	{{/has_newsletter}}

	{{#has_education}}
	<div id="hp_education">
		<h3><img src="/extensions/wikihow/homepage/images/EducationResource_opti.svg" />{{{amazon_ignite_header}}}</h3>
