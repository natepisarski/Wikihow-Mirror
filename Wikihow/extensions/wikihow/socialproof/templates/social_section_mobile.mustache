<div class="section aboutthisarticle" id="aboutthisarticle">

	<h2 id="sp_h2"><span class="mw-headline">{{section_name}}</span></h2>

	<div id="social_proof_mobile">
		<a name="social_proof_anchor" id="social_proof_anchor"></a>
		<div class="sp_inner">
			{{#expert}}
				{{> expert_section}}
			{{/expert}}
			<div id="sp_expert_desc">
			{{{author_info}}}
			</div>

			{{^is_intl}}

				{{#difficult_article}}
				<div class="sp_box sp_box_hoverable sp_difficult_box">
					<div class="sp_icon_bg" ></div>
					<div class="sp_difficult_icon"></div>
					{{sp_difficult}}
				</div>
				{{/difficult_article}}

				{{> stars}}
				{{> social_stats}}

			{{/is_intl}}

			{{#category_links}}
				<div class="sp_box sp_fullbox">
					{{categories}}: {{{category_links}}}
				</div>
			{{/category_links}}

			<div class="clearall"></div>
		</div>

	</div>

	<ul id="end_options" class="section_text">
		{{#end_options}}<li><a href='{{link}}' id='{{id}}'>{{name}}</a></li>{{/end_options}}
	</ul>

	<div class='page_stats section_text'>{{page_stats}}</div>
</div>