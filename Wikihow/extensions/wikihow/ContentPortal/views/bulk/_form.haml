

!= partial("shared/errors")

%form.prevent-double{action: $formAction, method: "post"}
	.form-group.title
		%label
			Paste in urls for
			= $formAction == url('bulk/delete') ? 'Removal' : 'Management'
		%textarea.form-control{name: "data", placeholder: "Description", rows: "6"}= isset($urls) ? implode("\n", $urls) : ''

	%input.btn.btn-primary.btn-lg{type: "submit", value: "Validate Urls"}
	%a.btn.btn-default.btn-lg{href: url("articles/index")} Cancel
