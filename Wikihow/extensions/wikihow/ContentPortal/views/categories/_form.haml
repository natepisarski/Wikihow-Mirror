
!= partial("shared/errors")

%form.prevent-double{method: "post", action: urlFor($category)}
	.form-group.title
		%label Category title
		%input.form-control.input-lg{name:"category[title]", value: $category->title, placeholder: "Title"}

	.form-group
		%label Description
		%textarea.form-control(rows="6" placeholder="Description" name="category[description]")= $category->description

	%hr

	%input.btn.btn-primary.btn-lg(type="submit" value="Save")
	%a.btn.btn-default.btn-lg{href: url("categories")} Cancel
