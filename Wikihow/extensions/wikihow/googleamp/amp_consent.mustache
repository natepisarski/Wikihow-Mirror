<amp-consent id="myUserConsent" layout="nodisplay">
	<script type="application/json">
	{
		"consentInstanceId": "world-wide-consent",
		"consentRequired": false,
		"geoOverride": {
			"eea": {
				"promptUI": "eea-consent-ui",
				"consentRequired": true },
			"us": {
				"consentRequired": "remote",
				"checkConsentHref": "{{ccpa_endpoint}}"
			}
		}
	}
	</script>
	<div id="eea-consent-ui" class="popupOverlay">
		<div id="gdpr" class="consentPopup">
			<div id="gdpr_text">{{{gdpr_message}}}</div>
			<button on="tap:myUserConsent.accept" class="ampstart-btn ampstart-btn-secondary caps mx1 gdpr_button">{{gdpr_accept}}</button>
		</div>
	</div>
</amp-consent>
